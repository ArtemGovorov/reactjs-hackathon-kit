{
  "version": "0.1.0",
  "command": "bash",
  "isShellCommand": true,
  "showOutput": "silent",
  "args": [
    "-c"
  ],
  "tasks": [
    {
      "taskName": "build",
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isWatching": false,
      "args": [
        "node_modules/typescript/bin/tsc -p ."
      ],
      "problemMatcher": "$tsc"
    },
    {
      "taskName": "build:watch",
      "suppressTaskName": true,
      "isBuildCommand": true,
      "isWatching": true,
      "args": [
        "node_modules/typescript/bin/tsc -w -p ."
      ],
      "problemMatcher": "$tsc-watch"
    },
    {
      "taskName": "lint",
      "suppressTaskName": true,
      "args": [
        "npm run lint:vscode"
      ],
      "problemMatcher": {
        "owner": "tslint",
        "fileLocation": [
          "relative",
          "${workspaceRoot}"
        ],
        "severity": "warning",
        "pattern": {
          "regexp": "^\\[tslint\\] (.*):(\\d+):(\\d+):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "showOutput": "never"
    },
    {
      "taskName": "test",
      "suppressTaskName": true,
      "args": [
        "npm run test"
      ],
      "isTestCommand": true,
      "showOutput": "silent",
      "problemMatcher": {
        "severity": "error",
        "fileLocation": [
          "relative",
          "${workspaceRoot}/src"
        ],
        "pattern": [
          {
            "regexp": "webpack:\\/\\/\\/(.*\\.tsx?):(\\d+):(\\d+)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 1
          }
        ]
      }
    }
  ]
}